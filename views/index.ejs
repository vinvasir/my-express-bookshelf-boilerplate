<% include _header %>

<h1>Hello World!</h1>

<ul>
<% users.forEach(user => { %>
	
	<li class="card">

		<p><a href="/users/<%= user.id %>"><%= user.name %></a></p>

		<p><%= user.username %></p>

		<p><%= user.email %></p>
 		<ul>
			<% user.posts.forEach(post => { %>

				<li>
					<a href="/posts/<%= post.id %>">
						<strong><%= post.title %>:</strong>

						<%= post.body %>
					</a>
				</li>
			<% }) %>
		</ul>

	</li>
<% }) %>
</ul>

<% include _footer %>